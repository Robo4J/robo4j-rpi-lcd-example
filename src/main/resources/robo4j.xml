<robo4j>
    <roboUnit id="lcd">
        <class>com.robo4j.units.rpi.lcd.AdafruitLcdUnit</class>
        <config name="com.robo4j.core.root">
            <value name="bus" type="int">1</value>
            <!-- 0x20 hex -->
            <value name="address" type="int">32</value>
        </config>
    </roboUnit>

    <roboUnit id="http">
        <class>com.robo4j.core.unit.HttpServerUnit</class>
        <config name="com.robo4j.core.root">
            <value name="port" type="int">8025</value>
            <value name="target" type="String">controller</value>
            <commands path="lcd" method="GET">
                <command name="up" type="String">up</command>
                <command name="down" type="String">down</command>
                <command name="left" type="String">left</command>
                <command name="right" type="String">right</command>
                <command name="select" type="String">select</command>
            </commands>
        </config>
    </roboUnit>

    <roboUnit id="buttons">
        <class>com.robo4j.units.rpi.lcd.ButtonUnit</class>
        <config name="com.robo4j.core.root">
            <value name="bus" type="int">1</value>
            <!-- 0x20 hex -->
            <value name="address" type="int">32</value>
            <value name="target" type="String">controller</value>
        </config>
    </roboUnit>

    <roboUnit id="controller">
        <class>com.robo4j.rpi.lcd.example.controller.LcdExampleController</class>
        <config name="com.robo4j.core.root">
            <value name="target" type="String">lcd</value>
        </config>
    </roboUnit>
</robo4j>